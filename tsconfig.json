{
    "compilerOptions": {
        /* Configurações de Linguagem */
        "target": "ES2022", // Versão moderna do JavaScript
        "module": "commonjs", // Sistema de módulos (compatível com Node.js)
        "lib": [
            "ES2022"
        ], // Bibliotecas disponíveis
        /* Interop Constraints */
        "esModuleInterop": true, // Facilita importação de módulos CommonJS
        "allowSyntheticDefaultImports": true, // Permite default imports
        "forceConsistentCasingInFileNames": true, // Força consistência em nomes de arquivos
        "isolatedModules": true, // Garante que cada arquivo possa ser transpilado isoladamente
        /* Type Checking */
        "strict": true, // Ativa todas verificações estritas
        "noImplicitAny": true, // Erro em expressões com tipo 'any' implícito
        "strictNullChecks": true, // Verificação estrita de null/undefined
        "strictFunctionTypes": true, // Verificação estrita de tipos de função
        "strictBindCallApply": true, // Verificação estrita de bind/call/apply
        "strictPropertyInitialization": true, // Verificação de inicialização de propriedades
        "noImplicitThis": true, // Erro em 'this' com tipo implícito
        "alwaysStrict": true, // Parse em modo strict
        /* Additional Checks */
        "noUnusedLocals": true, // Erro em variáveis locais não usadas
        "noUnusedParameters": true, // Erro em parâmetros não usados
        "noImplicitReturns": true, // Erro em funções sem return explícito
        "noFallthroughCasesInSwitch": true, // Erro em cases sem break
        /* Emit */
        "outDir": "./dist", // Diretório de saída para arquivos compilados
        "rootDir": "./", // Diretório raiz dos arquivos fonte
        "declaration": true, // Gera arquivos .d.ts
        "declarationMap": true, // Gera mapas para arquivos .d.ts
        "sourceMap": true, // Gera source maps para debugging
        "removeComments": false, // Mantém comentários no código compilado
        /* Skip Lib Check */
        "skipLibCheck": true // Pula verificação de arquivos .d.ts de libs
    },
    "include": [
        "src/**/*",
        "lib/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}